<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textColor="#2196F3"
        android:id="@+id/titlemain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOTIFICATIONS"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        />
    <LinearLayout
        android:id="@+id/viewStyle"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/titlemain"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">
    <TextView
        android:textColor="#DA7094"
        android:id="@+id/styleT"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Temperature"
        android:textSize="30dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@+id/titlemain"
        />
    <ImageView
        android:layout_below="@+id/titlemain"
        android:layout_width="50dp"

        android:layout_marginLeft="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_temp"/>
    </LinearLayout>
   <EditText

       android:id="@+id/edt_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"

       android:hint="  Title"
       android:textSize="30dp"
       android:layout_marginLeft="40dp"
       android:layout_marginRight="40dp"

       android:layout_below="@+id/viewStyle"/>


    <EditText
        android:text="0"
        android:id="@+id/valueMinT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Min"
        android:textSize="20dp" />

    <EditText
        android:text="0"
        android:id="@+id/valueMaxT"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:hint="Max"
        android:textSize="20dp" />
    <LinearLayout


        android:id="@+id/viewStyleh"
        android:layout_marginTop="210dp"
        android:layout_below="@+id/titlemain"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">
        <TextView
            android:textColor="#4BD3E4"
            android:id="@+id/styleH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Humidity"
            android:textSize="30dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/titlemain"
            />
        <ImageView
            android:layout_below="@+id/titlemain"
            android:layout_width="50dp"
            android:layout_marginLeft="100dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_humid"/>
    </LinearLayout>
    <EditText

        android:id="@+id/edt_title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Title"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"

        android:layout_below="@+id/viewStyleh"/>


    <EditText
        android:text="0"
        android:id="@+id/valueMinh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title1"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Min"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/valueMaxh"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title1"
        android:layout_alignParentRight="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:hint="Max"
        android:text="5"
        android:textSize="20dp" />
    <LinearLayout
        android:id="@+id/viewStylew"

        android:layout_below="@+id/valueMaxh"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp">
        <TextView
            android:textColor="#DCA0E6"
            android:id="@+id/styleW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WindSpeed"
            android:textSize="30dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/titlemain"
            />
        <ImageView
            android:layout_below="@+id/titlemain"
            android:layout_width="50dp"

            android:layout_marginLeft="80dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_windspeed"/>
    </LinearLayout>
    <EditText

        android:id="@+id/edt_title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="  Title"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="0dp"

        android:layout_below="@+id/viewStylew"/>


    <EditText
        android:id="@+id/valueMinW"
        android:layout_width="100dp"
        android:text="0"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title2"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Min"
        android:textSize="20dp" />

    <EditText

        android:id="@+id/valueMaxW"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/edt_title2"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="20dp"
        android:hint="MaxW"
        android:text="5"
        android:textSize="20dp" />
    <Button
        android:id="@+id/btn_add"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:textColor="@color/tt_color"
        android:text="update"
       android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:fontFamily="sans-serif"
        android:background="@drawable/custom_button_date"/>

</RelativeLayout>