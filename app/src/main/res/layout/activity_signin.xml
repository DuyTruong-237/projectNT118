<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor1">

    <LinearLayout
        android:id="@+id/firstcont"
        android:layout_width="90dp"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_alignRight="@+id/firstcont"
        android:id="@+id/weather"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_below="@+id/weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"></com.google.android.gms.maps.MapView>

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_below="@+id/map"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_below="@+id/map"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>
    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_below="@+id/map"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>
    <LinearLayout
        android:id="@+id/last4content"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:orientation="vertical"
        android:layout_below="@+id/map"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="110dp"
        android:background="@drawable/custom_contentwrapper"></LinearLayout>

    <LinearLayout
        android:id="@+id/lastcontent"
        android:layout_alignRight="@+id/last4content"
        android:layout_width="150dp"
        android:layout_height="170dp"
        android:layout_below="@+id/map"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="70dp"
        android:layout_below="@id/lastcontent"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_toolsmenu"></LinearLayout>
</RelativeLayout>