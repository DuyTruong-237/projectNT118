<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_gradiently">

    <LinearLayout
        android:id="@+id/firstcont"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper">
        <TextView
            android:id="@+id/txtT"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:text="00"
            android:textSize="80dp"
            android:textColor="@color/mainColor3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"/>
        <TextView
            android:layout_marginLeft="20dp"
            android:text="°C"
            android:textSize="60dp"
            android:textColor="@color/mainColor3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignRight="@+id/firstcont"
        android:id="@+id/weather"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="130dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/nang"/>
        <TextView
            android:id="@+id/txtClouds"
            android:text=""
            android:textSize="45dp"
            android:textColor="@color/mainColor3"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/weather"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/night_cloudy_scene">

    </ImageView>

    <LinearLayout
        android:id="@+id/uv"
        android:layout_width="200dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:layout_below="@+id/mapButton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper">
        <TextView
            android:text="UV"

            android:textSize="55dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="00"
            android:id="@+id/txtUV"
            android:textSize="55dp"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/wind"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_below="@+id/uv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_contentwrapper">
        <TextView
            android:text="Wind"

            android:textSize="40dp"
            android:textColor="#fff"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="00"
            android:id="@+id/txtWind"
            android:textSize="40dp"
            android:textColor="#fff"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lastcontent"
        android:layout_width="150dp"
        android:layout_height="190dp"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Độ ẩm"
            android:textColor="#fff"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/txtHum"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:text="00"
            android:textColor="#fff"
            android:textSize="80dp" />
    </LinearLayout>
</RelativeLayout>