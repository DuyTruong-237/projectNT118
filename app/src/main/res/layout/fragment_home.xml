<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainColor1">

    <LinearLayout
        android:id="@+id/firstcont"
        android:layout_width="115dp"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtT"
            android:layout_width="match_parent"
            android:layout_height="80dp"

           android:textAlignment="center"
            android:text="00"
            android:textColor="#fff"
            android:textSize="60dp" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="80dp"

            android:textAlignment="center"
            android:text="Độ"
            android:textColor="#fff"
            android:textSize="60dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="210dp"
        android:layout_height="180dp"
        android:layout_alignRight="@+id/firstcont"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_contentwrapper"


        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:src="@drawable/may" />

        <TextView

            android:id="@+id/txtClouds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="cloud"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="40dp" />


    </LinearLayout>

    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/weather"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"></ImageView>

    <LinearLayout
        android:id="@+id/uv"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/mapButton"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="UV"
            android:textColor="#fff"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/txtUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:text="00"
            android:textColor="#fff"
            android:textSize="45dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wind"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_below="@+id/uv"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Wind"
            android:textColor="#fff"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="00"
            android:textColor="#fff"
            android:textSize="40dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lastcontent"

        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Độ ẩm"
            android:textColor="#fff"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/txtHum"

            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_marginLeft="30dp"
            android:text="00"
            android:textColor="#fff"
            android:textSize="80dp" />

    </LinearLayout>

</RelativeLayout>