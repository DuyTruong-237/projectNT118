<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_nightcloudysky_radiusly">

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/may" />

        <TextView
            android:id="@+id/txtClouds"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Cloud"
            android:textAlignment="center"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstcont"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_below="@+id/mapButton"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Â°C"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtT"
            android:layout_marginLeft="50dp"
            android:text="00"
            android:textSize="40dp"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/weather"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"></ImageView>

    <LinearLayout
        android:id="@+id/uv"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_below="@+id/mapButton"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:text="UV"
            android:gravity="center"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wind"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_below="@+id/uv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Wind"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtWind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lastcontent"
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_below="@+id/uv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="%H"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtHum"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="50dp"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>