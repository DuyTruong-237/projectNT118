<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background= "@drawable/custom_background_gradiently">
    <include layout = "@layout/activity_home_toolbar"/>

    <LinearLayout
        android:id="@+id/weather"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="vertical">
        <ImageView
            android:layout_width="220dp"
            android:layout_height="120dp"
            android:src="@drawable/may"
            android:layout_gravity="center"/>

        <TextView
            android:id="@+id/txtClouds"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Cloud"
            android:textAlignment="center"
            android:textColor="#F7FFFFFF"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/firstcont"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_below="@+id/weather"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="25dp"
            android:gravity="center"
            android:text="Â°C"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtT"
            android:layout_marginLeft="35dp"
            android:text="00"
            android:textSize="40dp"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/mapButton"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_below="@+id/weather"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_contentwrapper"
        android:foreground="#6FFFFFFF"
        android:orientation="horizontal">
    </ImageView>

    <LinearLayout
        android:id="@+id/uv"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/firstcont"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="UV"
            android:textColor="@color/maincolor2"
            android:textSize="40dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtUV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:fontFamily="serif-monospace"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:textSize="40dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wind"
        android:layout_width="170dp"
        android:layout_height="90dp"
        android:layout_below="@+id/uv"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:text="m/s"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtWind"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:fontFamily="sans-serif-thin"
            android:textStyle="bold"
            android:textSize="35dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lastcontent"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/mapButton"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_contentwrapper"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="%H"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/txtHum"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center"
            android:text="00"
            android:textColor="@color/maincolor2"
            android:fontFamily="serif-monospace"
            android:textStyle="bold"
            android:textSize="40dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>