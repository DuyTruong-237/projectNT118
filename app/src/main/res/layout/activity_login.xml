<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //đăng nhập
    <ImageView
        android:id="@+id/logoLogin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo1"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/txtLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logoLogin"

        android:layout_centerHorizontal="true"
        android:text="Đăng nhập"
        android:textColor="#4FCCDC"
        android:textSize="30dp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/edtUsername"
        android:hint="ID người dùng"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtLogin"
        android:drawableStart="@drawable/rsz_user_login"
        android:drawableTint="#ccc"


        />
    <EditText
        android:id="@+id/edtPass"
        android:hint="Mật khẩu"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:drawablePadding="5dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtUsername"
        android:drawableStart="@drawable/rsz_padlock"
        android:drawableEnd="@drawable/rsz_hidden"
        android:drawableTint="#ccc"


        />

    <CheckBox
        android:id="@+id/cbkReAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtPass"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp"
        android:text="Nhớ tài khoản"
        android:textSize="18dp" />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cbkReAcc"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="40dp"

        android:backgroundTintMode="add"
        android:background="@drawable/custom_button"
        android:text="Đăng nhập"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:text="Đăng ký"
        android:textAllCaps="false"
        android:textColor="#132DD8"
        android:textSize="15dp" />
    <TextView
        android:id="@+id/txtFogetPW"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnLogin"
        android:layout_alignParentRight="true"
        android:layout_marginTop="25dp"
        android:text="Quên mật khẩu?"
        android:layout_marginRight="40dp"
        android:textAllCaps="false"

        android:textSize="15dp" />
</RelativeLayout>